# Office Automation Environment Variables
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control!

# =============================================================================
# GOOGLE API CONFIGURATION
# =============================================================================
# Get from: https://console.cloud.google.com/
# 1. Create/select project
# 2. Enable Google Sheets API and Google Docs API  
# 3. Go to Credentials > Create Credentials > API Key
GOOGLE_API_KEY=your_google_api_key_here

# Example: GOOGLE_API_KEY=AIzaSyDxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# EMAIL CONFIGURATION  
# =============================================================================
# Gmail SMTP settings (recommended)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# For Gmail: Enable 2FA and generate App Password
# Google Account > Security > 2-Step Verification > App passwords
# Example: EMAIL_PASSWORD=abcd efgh ijkl mnop

# Alternative SMTP providers:
# Outlook: smtp-mail.outlook.com:587
# Yahoo: smtp.mail.yahoo.com:587

# =============================================================================
# MICROSOFT OFFICE CONFIGURATION
# =============================================================================
# COM Automation settings (Windows only)
OFFICE_EXCEL_VISIBLE=false
OFFICE_WORD_VISIBLE=false
OFFICE_POWERPOINT_VISIBLE=false

# =============================================================================
# FILE PATHS AND DIRECTORIES
# =============================================================================
# Input/Output directories
INPUT_DIR=data
OUTPUT_DIR=outputs
TEMPLATES_DIR=templates
LOGS_DIR=logs

# Default file paths
DEFAULT_EXCEL_FILE=data/sample_data.xlsx
DEFAULT_WORD_TEMPLATE=templates/document_template.docx
DEFAULT_CSV_FILE=data/sample_data.csv

# =============================================================================
# AUTOMATION SETTINGS
# =============================================================================
# Pipeline behavior
AUTO_CONVERT_TO_PDF=true
AUTO_SEND_EMAIL=false
AUTO_CLEANUP_TEMP_FILES=true

# Processing limits
MAX_RECORDS_PER_BATCH=1000
EMAIL_SEND_DELAY_SECONDS=1
API_REQUEST_DELAY_SECONDS=0.5

# =============================================================================
# GOOGLE SHEETS SPECIFIC
# =============================================================================
# Default sheet settings
DEFAULT_SHEET_NAME=Sheet1
DEFAULT_RANGE=A:Z

# Example spreadsheet IDs for testing
# Public Google example sheet:
EXAMPLE_SPREADSHEET_ID=1BxiMVs0XRA5nFMdKvBdBZjgmUUqptlbs74OgvE2upms

# =============================================================================
# EMAIL TEMPLATES AND RECIPIENTS
# =============================================================================
# Default email settings
EMAIL_FROM_NAME=Office Automation System
EMAIL_SUBJECT_PREFIX=[Automated]

# Recipients (comma-separated)
REPORT_RECIPIENTS=manager@company.com,team@company.com
NOTIFICATION_RECIPIENTS=admin@company.com

# =============================================================================
# LOGGING AND DEBUGGING
# =============================================================================
# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=automation_pipeline.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Debug settings
DEBUG_MODE=false
VERBOSE_OUTPUT=false
SAVE_INTERMEDIATE_FILES=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# File permissions and safety
ALLOW_FILE_OVERWRITE=false
REQUIRE_CONFIRMATION_FOR_BATCH_OPERATIONS=true
MAX_FILE_SIZE_MB=50

# API rate limiting
MAX_API_REQUESTS_PER_MINUTE=60
API_TIMEOUT_SECONDS=30

# =============================================================================
# DEVELOPMENT/TESTING
# =============================================================================
# Test mode settings
TEST_MODE=false
USE_SAMPLE_DATA=true
SKIP_EMAIL_SENDING=true
DRY_RUN=false

# Mock services for testing
MOCK_GOOGLE_API=false
MOCK_EMAIL_SERVICE=false
MOCK_OFFICE_COM=false